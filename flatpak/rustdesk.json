{
  "id": "com.OABRemoteDesk.OABRemoteDesk",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "21.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "OABRemoteDesk",
  "icon": "share/icons/hicolor/scalable/apps/OABRemoteDesk.svg",
  "modules": [
    "shared-modules/libappindicator/libappindicator-gtk3-12.10.json",
    "xdotool.json",
    {
      "name": "OABRemoteDesk",
      "buildsystem": "simple",
      "build-commands": [
        "bsdtar -zxvf OABRemoteDesk-1.2.3.deb",
        "tar -xvf ./data.tar.xz",
        "cp -r ./usr/*  /app/",
        "mkdir -p /app/bin && ln -s /app/lib/OABRemoteDesk/OABRemoteDesk /app/bin/OABRemoteDesk",
        "mv /app/share/applications/OABRemoteDesk.desktop /app/share/applications/com.OABRemoteDesk.OABRemoteDesk.desktop",
        "sed -i '/^Icon=/ c\\Icon=com.OABRemoteDesk.OABRemoteDesk' /app/share/applications/com.OABRemoteDesk.OABRemoteDesk.desktop",
        "sed -i '/^Icon=/ c\\Icon=com.OABRemoteDesk.OABRemoteDesk' /app/share/applications/OABRemoteDesk-link.desktop",
        "mv /app/share/icons/hicolor/scalable/apps/OABRemoteDesk.svg /app/share/icons/hicolor/scalable/apps/com.OABRemoteDesk.OABRemoteDesk.svg",
        "for size in 16 24 32 48 64 128 256 512; do\n rsvg-convert -w $size -h $size -f png -o $size.png logo.svg\n install -Dm644 $size.png /app/share/icons/hicolor/${size}x${size}/apps/com.OABRemoteDesk.OABRemoteDesk.png\n done"
      ],
      "cleanup": ["/include", "/lib/pkgconfig", "/share/gtk-doc"],
      "sources": [
        {
          "type": "file",
          "path": "../OABRemoteDesk-1.2.3.deb"
        },
        {
          "type": "file",
          "path": "../res/logo.svg"
        }
      ]
    }
  ],
  "finish-args": [
    "--share=ipc",
    "--socket=x11",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--share=network",
    "--filesystem=home",
    "--device=dri",
    "--socket=pulseaudio",
    "--talk-name=org.freedesktop.Flatpak"
  ]
}
